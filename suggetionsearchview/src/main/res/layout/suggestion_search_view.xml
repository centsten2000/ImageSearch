<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/suggestionSearchViewRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/searchViewRootLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="vertical"
        android:padding="@dimen/suggestion_search_view_side_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_box_border"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/suggestion_search_view_side_margin"
                android:layout_marginTop="@dimen/suggestion_search_view_side_margin"
                android:layout_weight="1"
                android:background="@null" />

            <ImageView
                android:id="@+id/clearButton"
                android:layout_width="@dimen/suggestion_search_view_icon_size"
                android:layout_height="@dimen/suggestion_search_view_icon_size"
                android:layout_marginStart="@dimen/suggestion_search_view_icon_side_margin"
                android:layout_marginEnd="@dimen/suggestion_search_view_icon_side_margin"
                app:srcCompat="@drawable/ic_action_cancel" />

            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="@dimen/suggestion_search_view_icon_size"
                android:layout_height="@dimen/suggestion_search_view_icon_size"
                android:layout_marginEnd="@dimen/suggestion_search_view_icon_side_margin"
                app:srcCompat="@drawable/ic_action_search" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/suggestionViewRootLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorDarkGrayTransparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchViewRootLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suggestionRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/suggestion_search_view_side_margin"
            android:layout_marginEnd="@dimen/suggestion_search_view_side_margin"
            android:layout_marginBottom="@dimen/suggestion_search_view_side_margin"
            android:background="@color/colorLightGray" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>