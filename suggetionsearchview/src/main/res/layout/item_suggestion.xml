<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/suggestion_accessory_image_view"
            android:layout_width="@dimen/default_suggestion_item_icon_size"
            android:layout_height="@dimen/default_suggestion_item_icon_size"
            android:padding="@dimen/default_suggestion_item_icon_padding" />

        <TextView
            android:id="@+id/suggestion_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:id="@+id/suggestion_sub_button_image_view"
            android:layout_width="@dimen/default_suggestion_item_icon_size"
            android:layout_height="@dimen/default_suggestion_item_icon_size"
            android:padding="@dimen/default_suggestion_item_icon_padding" />

    </LinearLayout>

</layout>