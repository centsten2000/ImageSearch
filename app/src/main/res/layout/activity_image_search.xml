        <com.ch.yoon.kakao.pay.imagesearch.presentation.common.customview.searchview.SuggestionSearchView
            android:id="@+id/suggestionSearchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:textSize="14dp"
            app:setText="@{searchBoxViewModel.searchKeyword}"
            app:onTextChangeListener="@{(changedText) -> searchBoxViewModel.onChangeKeyword(changedText)}"
            app:onSearchButtonClickListener="@{(inputtedText) -> searchBoxViewModel.onClickSearchButton()}"
            app:onSearchViewEditTextClickListener="@{() -> searchBoxViewModel.onClickSearchBox()}"
            app:searchLogList="@{searchBoxViewModel.searchLogList}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

