<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <import type="com.ch.yoon.kakao.pay.imagesearch.data.remote.kakao.request.ImageSortType" />

        <variable
            name="searchBoxViewModel"
            type="com.ch.yoon.kakao.pay.imagesearch.ui.imagesearch.searchbox.SearchBoxViewModel" />

        <variable
            name="imageListViewModel"
            type="com.ch.yoon.kakao.pay.imagesearch.ui.imagesearch.imagelist.ImageListViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui.imagesearch.ImageSearchActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mainToolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/image_search_box_side_margin"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/image_search_box_side_margin"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/search_box_border"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </View>

                <EditText
                    android:id="@+id/keywordEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/image_search_box_side_margin"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/image_search_box_side_margin"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/image_search_edit_text_hint"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true"
                    android:textSize="14dp"
                    app:setText="@{searchBoxViewModel.searchKeyword}"
                    android:onTextChanged="@{(text, start, before, count) -> searchBoxViewModel.onChangeKeyword(text.toString())}"
                    app:hideKeyboard="@{searchBoxViewModel.searchBoxFocus}"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintEnd_toStartOf="@+id/searchButton"
                    app:layout_constraintStart_toStartOf="@+id/view"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/searchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/image_search_box_side_margin"
                    android:background="@drawable/ic_action_search"
                    android:onClick="@{() -> searchBoxViewModel.onClickSearchButton()}"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="@+id/view"
                    app:layout_constraintTop_toTopOf="@+id/view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/fourImageInLineButton"
            android:layout_width="@dimen/count_in_line_icon_size"
            android:layout_height="@dimen/count_in_line_icon_size"
            android:layout_marginTop="@dimen/count_in_line_icon_side_margin"
            android:layout_marginEnd="@dimen/count_in_line_icon_side_margin"
            android:onClick="@{() -> imageListViewModel.changeCountOfItemInLine(4)}"
            app:applySelectedState="@{imageListViewModel.countOfItemInLine == 4}"
            app:layout_constraintEnd_toEndOf="@+id/mainToolbar"
            app:layout_constraintTop_toBottomOf="@+id/mainToolbar"
            app:srcCompat="@drawable/ic_four_image_in_line_selector" />

        <ImageView
            android:id="@+id/threeImageInLineButton"
            android:layout_width="@dimen/count_in_line_icon_size"
            android:layout_height="@dimen/count_in_line_icon_size"
            android:layout_marginEnd="@dimen/count_in_line_icon_side_margin"
            android:onClick="@{() -> imageListViewModel.changeCountOfItemInLine(3)}"
            app:applySelectedState="@{imageListViewModel.countOfItemInLine == 3}"
            app:layout_constraintBottom_toBottomOf="@+id/fourImageInLineButton"
            app:layout_constraintEnd_toStartOf="@+id/fourImageInLineButton"
            app:layout_constraintTop_toTopOf="@+id/fourImageInLineButton"
            app:srcCompat="@drawable/ic_three_image_in_line_selector" />

        <ImageView
            android:id="@+id/twoImageInLineButton"
            android:layout_width="@dimen/count_in_line_icon_size"
            android:layout_height="@dimen/count_in_line_icon_size"
            android:layout_marginEnd="@dimen/count_in_line_icon_side_margin"
            android:onClick="@{() -> imageListViewModel.changeCountOfItemInLine(2)}"
            app:applySelectedState="@{imageListViewModel.countOfItemInLine == 2}"
            app:layout_constraintBottom_toBottomOf="@+id/threeImageInLineButton"
            app:layout_constraintEnd_toStartOf="@+id/threeImageInLineButton"
            app:layout_constraintTop_toTopOf="@+id/threeImageInLineButton"
            app:srcCompat="@drawable/ic_two_image_in_line_selector" />

        <TextView
            android:id="@+id/accuracySortTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/image_sort_type_text_view_side_margin"
            android:text="@string/image_sort_type_accuracy_text"
            android:textStyle="bold"
            android:textColor="@drawable/image_sort_type_textview_selector"
            android:onClick="@{() -> imageListViewModel.changeImageSortType(ImageSortType.ACCURACY)}"
            app:applySelectedState="@{imageListViewModel.imageSortType == ImageSortType.ACCURACY}"
            app:layout_constraintBottom_toBottomOf="@+id/twoImageInLineButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/twoImageInLineButton" />

        <TextView
            android:id="@+id/recencySortTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/image_sort_type_text_view_side_margin"
            android:text="@string/image_sort_type_recency_text"
            android:textStyle="bold"
            android:textColor="@drawable/image_sort_type_textview_selector"
            android:onClick="@{() -> imageListViewModel.changeImageSortType(ImageSortType.RECENCY)}"
            app:applySelectedState="@{imageListViewModel.imageSortType == ImageSortType.RECENCY}"
            app:layout_constraintBottom_toBottomOf="@+id/accuracySortTextView"
            app:layout_constraintStart_toEndOf="@+id/accuracySortTextView"
            app:layout_constraintTop_toTopOf="@+id/accuracySortTextView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imageRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/count_in_line_icon_side_margin"
            android:scrollbars="vertical"
            app:countOfItemInLine="@{imageListViewModel.countOfItemInLine}"
            app:imageSearchState="@{imageListViewModel.imageSearchState}"
            app:searchImageInfoList="@{imageListViewModel.imageDocumentList}"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fourImageInLineButton" />

        <View
            android:id="@+id/searchHistoryBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorDarkGrayTransparent"
            android:onClick="@{() -> searchBoxViewModel.onClickBackground()}"
            android:visibility="@{searchBoxViewModel.searchBoxFocus ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainToolbar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchLogRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/image_search_box_side_margin"
            android:layout_marginEnd="@dimen/image_search_box_side_margin"
            android:background="@color/colorLightGray"
            android:visibility="@{searchBoxViewModel.searchBoxFocus ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/searchHistoryBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintHeight_max="@dimen/search_box_recycler_view_max_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searchHistoryBackground"
            app:layout_constraintVertical_bias="0.0"
            app:searchLogList="@{searchBoxViewModel.searchLogList}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>