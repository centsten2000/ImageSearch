<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ch.yoon.kakao.pay.imagesearch.ui.imagesearch.searchbox.SearchBoxViewModel" />

        <variable
            name="searchLog"
            type="com.ch.yoon.kakao.pay.imagesearch.data.repository.image.model.SearchLog" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/keywordTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@{searchLogModel.getKeyword()}"
            android:onClick="@{() -> viewModel.onClickSearchButton(searchLog.keyword)}"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/logDeleteButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:onClick="@{() -> viewModel.onClickSearchLogDeleteButton(searchLog)}"
            app:srcCompat="@drawable/ic_action_clear" />

    </LinearLayout>

</layout>